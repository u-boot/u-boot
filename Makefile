		echo "#define CONFIG_SCPU"      >>$(obj)include/config.h ; \
		echo "... on SCPU board variant" ; \
	else \
		>$(obj)include/config.h ; \
	fi
	@$(MKCONFIG) -a pdnb3 arm ixp pdnb3 prodrive

