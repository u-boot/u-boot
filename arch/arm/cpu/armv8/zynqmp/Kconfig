if ARCH_ZYNQMP

choice
	prompt "Xilinx ZynqMP board select"

config TARGET_ZYNQMP_EP
	bool "ZynqMP EP Board"

endchoice

config SYS_BOARD
	default "zynqmp"

config SYS_VENDOR
	default "xilinx"

config SYS_SOC
	default "zynqmp"

config SYS_CONFIG_NAME
	default "xilinx_zynqmp_ep" if TARGET_ZYNQMP_EP

config ZYNQMP_USB
	bool "Configure ZynqMP USB"

endif
