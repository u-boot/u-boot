#include "socfpga-common-u-boot.dtsi"

/{
	aliases {
		spi0 = "/soc/spi@ff705000";
		udc0 = &usb1;
	};

	leds {
		compatible = "gpio-leds";

		led-0 {
			default-state = "off";
			gpios = <&portb 20 GPIO_ACTIVE_HIGH>;
		};

		led-1 {
			default-state = "off";
			gpios = <&portb 25 GPIO_ACTIVE_HIGH>;
			label = "status_1";
		};

		led-2 {
			default-state = "off";
			gpios = <&portb 26 GPIO_ACTIVE_HIGH>;
			label = "status_2";
		};

		led-3 {
			default-state = "off";
			gpios = <&portc 7 GPIO_ACTIVE_HIGH>;
		};
	};
};

&mmc {
	status = "disabled";
};

&qspi {
	bootph-all;

	n25q128@0 {
		compatible = "n25q128", "jedec,spi-nor";
		bootph-all;
	};
	n25q00@1 {
		compatible = "n25q00", "jedec,spi-nor";
		bootph-all;
	};
};

&uart0 {
	clock-frequency = <100000000>;
	bootph-all;
};

&uart1 {
	clock-frequency = <100000000>;
};

&porta {
	bank-name = "porta";
};

&portb {
	bank-name = "portb";
};

&portc {
	bank-name = "portc";
};

&watchdog0 {
	bootph-all;
};
