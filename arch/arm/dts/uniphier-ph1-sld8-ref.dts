/dts-v1/;
/include/ "uniphier-ph1-sld8.dtsi"

/ {
	model = "Panasonic UniPhier PH1-sLD8 Reference Board";
	compatible = "panasonic,ph1-sld8-ref", "panasonic,ph1-sld8";

	memory {
		device_type = "memory";
		reg = <0x80000000 0x20000000>;
	};

	chosen {
		bootargs = "console=ttyPS0,115200 earlyprintk";
		stdout-path = &uart0;
	};

	aliases {
		serial0 = &uart0;
		serial1 = &uart1;
		serial2 = &uart2;
		serial3 = &uart3;
		i2c0 = &i2c0;
		i2c1 = &i2c1;
		i2c2 = &i2c2;
		i2c3 = &i2c3;
	};
};

&uart0 {
	status = "okay";
};

&uart1 {
	status = "okay";
};

&i2c0 {
	status = "okay";
	eeprom {
		compatible = "i2c-eeprom";
		reg = <0x50>;
	};
};

&usb0 {
	status = "okay";
};

&usb1 {
	status = "okay";
};
