config STARFIVE_JH7110
	bool
	select ARCH_EARLY_INIT_R
	select CLK_JH7110
	select CPU
	select CPU_RISCV
	select RAM
	select RESET_JH7110
	select SUPPORT_SPL
	select SPL_RAM if SPL
	select SPL_STARFIVE_DDR
	select PINCTRL_STARFIVE_JH7110
	imply MMC
	imply MMC_BROKEN_CD
	imply MMC_SPI
	imply RISCV_TIMER if (RISCV_SMODE || SPL_RISCV_SMODE)
	imply SIFIVE_CACHE
	imply SIFIVE_CCACHE
	imply SMP
	imply SPI
	imply SPL_CPU
	imply SPL_LOAD_FIT
	imply SPL_OPENSBI
	imply SPL_SIFIVE_CLINT
