if ARCH_K1

config SPACEMIT_K1
	bool
	select BINMAN
	select ARCH_EARLY_INIT_R
	select SYS_CACHE_SHIFT_6
	select SUPPORT_SPL
	imply CPU
	imply CPU_RISCV
	imply RISCV_TIMER if (RISCV_SMODE || SPL_RISCV_SMODE)
	imply RISCV_ACLINT if RISCV_MMODE
	imply SPL_RISCV_ACLINT if SPL_RISCV_MMODE
	imply CMD_CPU
	imply DM_RESET
	imply SPL_CPU
	imply SPL_OPENSBI
	imply SPL_LOAD_FIT

endif
