if ARCH_UNIPHIER

config PINCTRL_UNIPHIER
	bool

config PINCTRL_UNIPHIER_LD4
	bool "UniPhier PH1-LD4 SoC pinctrl driver"
	depends on ARCH_UNIPHIER_LD4
	default y
	select PINCTRL_UNIPHIER

